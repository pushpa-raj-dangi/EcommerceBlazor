<MudText class="d-flex justify-center" Typo="Typo.h4">Latest Products</MudText>
<MudGrid Class="my-15">
    @foreach (var item in _source)
    {
        <MudItem Style="background:transparent" xs="2">
            <MudCard Elevation="0" Class="d-flex flex-column align-center py-4 justify-center py-2 px-1 ">
                <img src="/Images/@item.Icon" style="width:100%" />
                <MudCardContent>
                    <MudText Typo="Typo.caption" Style="color:black">@item.Title</MudText>
                    <MudText Typo="Typo.body1" Color="Color.Primary">$200 <del style="color:black">$240</del></MudText>
                </MudCardContent>
                <MudCardActions>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>
<style type="text/css">
    button.mud-button-root.mud-icon-button.mud-icon-button-color-inherit.mud-ripple.mud-ripple-icon.align-self-center {
        margin: -10px;
    }
   
</style>

