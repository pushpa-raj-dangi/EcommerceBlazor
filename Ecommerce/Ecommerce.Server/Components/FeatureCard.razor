
<MudGrid Class="my-15">
    @foreach (var item in _source)
    {
        <MudItem xs="3">
            <MudCard Elevation="0" Class="d-flex flex-column align-center py-4 justify-center py-2 px-1 " Style="@($"background:{item.Color};")">
               <img src="/Images/@item.Icon" height="60"/>
                <MudCardContent>
                    <MudText Typo="Typo.h5" Style="color:white">@item.Title</MudText>
                </MudCardContent>
                <MudCardActions>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>
<style type="text/css">
    button.mud-button-root.mud-icon-button.mud-icon-button-color-inherit.mud-ripple.mud-ripple-icon.align-self-center {
        margin: -10px;
    }
</style>

